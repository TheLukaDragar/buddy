{
  "expo": {
    "name": "buddy",
    "slug": "buddy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "buddy",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.theluka.buddy",
      "supportsTablet": true,
      "runtimeVersion": {
        "policy": "appVersion"
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#c5ddeb"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.theluka.buddy",
      "runtimeVersion": "1.0.0"
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#c5ddeb"
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        // Leave origin empty for automatic deployment
        // The EXPO_UNSTABLE_DEPLOY_SERVER=1 environment variable
        // will automatically set this during EAS builds
      },
      "eas": {
        "projectId": "82097d94-4f98-4761-a22d-d926faf1997b"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/82097d94-4f98-4761-a22d-d926faf1997b"
    }
  }
}
