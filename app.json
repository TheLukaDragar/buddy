{
  "expo": {
    "name": "buddy",
    "slug": "buddy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "buddy",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.theluka.buddy",
      "supportsTablet": false,
      "runtimeVersion": "1.0.0",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "This app needs microphone access to enable voice conversations with AI agents."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#c5ddeb"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.BROADCAST_STICKY",
        "android.permission.GET_TASKS",
        "android.permission.ACCESS_NOTIFICATION_POLICY",
        "android.permission.BIND_NOTIFICATION_LISTENER_SERVICE",
        "android.permission.MEDIA_CONTENT_CONTROL"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.theluka.buddy",
      "runtimeVersion": "1.0.0"
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://theluka-buddy.expo.app/"
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.200933224210-3gkrgive97g149jelma14i7dcco48qrj"
        }
      ],
      "expo-dev-client",
      "@livekit/react-native-expo-plugin",
      "@config-plugins/react-native-webrtc",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#c5ddeb"
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ],
      "expo-video",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "82097d94-4f98-4761-a22d-d926faf1997b"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/82097d94-4f98-4761-a22d-d926faf1997b"
    }
  }
}
